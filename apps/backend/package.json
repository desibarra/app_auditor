{
    "name": "@saas-fiscal/backend",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "build": "nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "db:generate": "drizzle-kit generate:sqlite",
        "db:push": "npx drizzle-kit push:sqlite",
        "db:migrate": "drizzle-kit migrate:sqlite",
        "db:studio": "drizzle-kit studio",
        "db:reset": "del /F dev.db 2>nul || true && npm run db:generate && npm run db:migrate",
        "seed:demo": "ts-node src/scripts/seed-demo.ts",
        "setup:local": "npm run db:generate && npm run db:migrate && npm run seed:demo",
        "health": "curl http://localhost:4000/api/health"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.955.0",
        "@aws-sdk/lib-storage": "^3.955.0",
        "@nestjs/common": "^10.2.10",
        "@nestjs/config": "^3.1.1",
        "@nestjs/core": "^10.2.10",
        "@nestjs/platform-express": "^10.2.10",
        "@types/archiver": "^7.0.0",
        "@types/pdfkit": "^0.17.4",
        "archiver": "^7.0.1",
        "better-sqlite3": "^9.2.2",
        "class-transformer": "^0.5.1",
        "dotenv": "^16.3.1",
        "drizzle-orm": "^0.29.1",
        "fast-xml-parser": "^5.3.3",
        "pdfkit": "^0.17.2",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.2.1",
        "@nestjs/schematics": "^10.0.3",
        "@nestjs/swagger": "^11.2.3",
        "@nestjs/typeorm": "^11.0.0",
        "@prisma/client": "^7.2.0",
        "@types/better-sqlite3": "^7.6.8",
        "@types/express": "^4.17.25",
        "@types/jest": "^30.0.0",
        "@types/multer": "^2.0.0",
        "@types/node": "^20.10.5",
        "bcrypt": "^6.0.0",
        "class-validator": "^0.14.3",
        "drizzle-kit": "^0.20.6",
        "ts-node": "^10.9.2",
        "typeorm": "^0.3.28",
        "typescript": "^5.3.3"
    }
}
